<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#99c19a6b"
    android:padding="25dp">

    <TextView
        android:textColor="@android:color/background_light"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="25dp"
        android:text="Branch Name"
        android:id="@+id/branchNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="@android:color/background_light"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_alignParentLeft="true"
        android:id="@+id/branchCreator"
        android:text="Branch Creator"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/branchNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:textColor="@android:color/background_light"
    android:textStyle="italic"
    style="@style/Base.TextAppearance.AppCompat.Medium"
    android:layout_marginRight="25dp"
    android:layout_alignParentRight="true"
    android:layout_below="@id/branchNameView"
    android:id="@+id/noOfLeavesView"
    android:text="no of Leaves/n"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <View
        android:layout_marginVertical="25dp"
        android:layout_below="@+id/branchCreator"
        android:layout_marginBottom="5dp"
        android:background="#3a6138"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c19a6b"
    android:padding="15dp"
    android:layout_alignParentBottom="true">

    <TextView
        android:textColor="@android:color/background_light"
        android:id="@+id/branchNameLabel"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Branch Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/branchNameInput"
        android:padding="10dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginVertical="15dp"
        android:textColor="#000"
        android:background="@android:color/background_light"
        android:hint="Name your branch!"
        android:layout_below="@id/branchNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="5dp"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_alignRight="@id/addLeavesBtn"
        android:layout_alignBottom="@id/addLeavesBtn"
        android:layout_alignTop="@id/addLeavesBtn"
        android:src="@drawable/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:paddingLeft="10dp"
        android:id="@+id/addLeavesBtn"
        android:paddingRight="35dp"
        android:layout_marginVertical="15dp"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@android:color/background_light"
        android:background="#44000000"
        android:textAllCaps="false"
        android:text="add leaves"
        android:layout_below="@id/branchNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="25dp"
        android:text="Enjoy your new branch!"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addLeavesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>